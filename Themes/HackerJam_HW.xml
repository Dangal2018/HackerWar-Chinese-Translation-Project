<CustomTheme>
  <!-- This defines the layout of the windows. The valid choices are:
  blue, green, white, mint, greencompact, riptide, colamaeleon and riptide2 - corresponding to the themes of those colors in the base game-->
  <themeLayoutName>green</themeLayoutName>

  <!-- This is a path to the background image file. It should be 1920x1080, and a .jpg or .png file.
  If this is left out, the theme will automatically generate a dynamic background for the theme-->
  <backgroundImagePath>Themes/Backgrounds/HackerWars_X-Server.png</backgroundImagePath>
  
  <!-- Main Colors - these will define the main feel of the theme -->
  <!-- Color of nodes on the netmap, and many other derived colors. -->
  <defaultHighlightColor>10,110,240</defaultHighlightColor>
  <defaultTopBarColor>160,20,20,40</defaultTopBarColor>
  <!-- This is used for the outlines of the module windows -->
  <moduleColorSolidDefault>10,50,180</moduleColorSolidDefault>
  <moduleColorStrong>0,40,90,100</moduleColorStrong>
  <moduleColorBacking>10,0,2,1</moduleColorBacking>

  <exeModuleTopBar>0,35,220,70</exeModuleTopBar>
  <exeModuleTitleText>50,180,255,255</exeModuleTitleText>

  <!-- Extra Options -->
  <warningColor>255,50,0</warningColor>
  <subtleTextColor>10,80,110</subtleTextColor>
  <darkBackgroundColor>8,0,20</darkBackgroundColor>
  <indentBackgroundColor>5,10,25,20</indentBackgroundColor>
  <outlineColor>0,60,150</outlineColor>
  <lockedColor>85,25,25,180</lockedColor>
  <brightLockedColor>160,0,0</brightLockedColor>
  <brightUnlockedColor>0,160,0</brightUnlockedColor>
  <unlockedColor>25,85,25</unlockedColor>
  <lightGray>110,160,200</lightGray>
  <shellColor>255,30,10</shellColor>
  <shellButtonColor>105,167,188</shellButtonColor>
  <semiTransText>20,80,160,50</semiTransText>
  <terminalTextColor>255,20,20</terminalTextColor>
  <topBarTextColor>126,126,126,100</topBarTextColor>
  <superLightWhite>2,2,2,30</superLightWhite>
  <connectedNodeHighlight>0,180,255,195</connectedNodeHighlight>
  <netmapToolTipColor>20,180,255,0</netmapToolTipColor>
  <netmapToolTipBackground>0,0,5,5</netmapToolTipBackground>
  <topBarIconsColor>255,255,255</topBarIconsColor>
  <thisComputerNode>195,120,20</thisComputerNode>
  <scanlinesColor>220,220,255,15</scanlinesColor>
  
  <!-- AlienFX Colors used for Alienware (and other) hardware with variable LED lights that Hacknet can set dynamically -->
  <AFX_KeyboardMiddle>0,120,255</AFX_KeyboardMiddle>
  <AFX_KeyboardOuter>255,150,0</AFX_KeyboardOuter>
  <AFX_WordLogo>0,120,255</AFX_WordLogo>
  <AFX_Other>0,100,255</AFX_Other>
</CustomTheme>